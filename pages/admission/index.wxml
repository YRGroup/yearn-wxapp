<import src="../../components/wxParse/wxParse.wxml" />
<view class="wrapper">
  <image class="bannerImg" src="{{img_base_url}}newBg.jpg" mode="aspectFill"></image>
  <!-- <view class="bg" ></view> -->
  <view>
    <view class="title">
      <text>ADMISSION PROBLEMS</text>
      <text>招生解答</text>
    </view>
    <view>
      <text class="pro-title" style="color:#ef3c56;">招生与录取</text>
      <v-slide catId="{{8}}" count="{{3}}"></v-slide>
    </view>
    <view>
      <text class="pro-title" style="color: #ed8f25;">招生与录取</text>
      <v-slide title-class="title2" catId="{{9}}" count="{{3}}"></v-slide>
    </view>
  </view>
  <view class="form-box">
    <view class="title">
      <text>APPLY lONLINE</text>
      <text>招生报名</text>
    </view>
    <van-cell-group>
      <van-field border="{{ true }}" value="{{ name }}" required label="用户名" placeholder="请输入家长姓名" />
      <van-field value="{{ phone }}" label="手机号" placeholder="请输入手机联系方式" required />
      <van-field value="{{ student_age }}" required label="儿童年龄" placeholder="请输入入学儿童年龄" error-message="" />
    </van-cell-group>
    <van-button custom-class="commit-btn" slot="button" size="large" type="primary" bind:click="commit">提交</van-button>
  </view>
  <van-notify id="custom-selector" />
</view>