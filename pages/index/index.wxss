/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}


.btn-wrapper{
  width: 90%;
  margin: 20rpx auto;
}
.btn-wrapper button{
  color: #114875 !important;
  border-color: #114875;
}
.news{
  margin-bottom: 40rpx;
}
.fix-btn{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 60rpx;
  bottom: 100rpx;
  background: #13415a;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  color: #fff;
  z-index: 99;
}
