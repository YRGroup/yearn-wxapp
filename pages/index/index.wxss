/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.btn-wrapper{
  width: 90%;
  margin: 20rpx auto;
  font-size: 40rpx;
}
.btn-wrapper button{
  color: #114875 !important;
  border-color: #114875;
}
.news{
  margin-bottom: 40rpx;
}
.fix-btn{

  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  background: #fdfdfd;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 0 20rpx #ddd;
}
.fix-btn image{
  width: 60rpx;
  height: 60rpx;
}