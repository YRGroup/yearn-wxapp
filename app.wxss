/**app.wxss**/
page {
  font-size: 32rpx;
  line-height:48rpx;
  color: #333;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.title {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  text-align: center;
  font-size: 42rpx;
  padding: 40rpx 0;
}

.font-size-16 {
  font-size: 30rpx;
}

.font-size-18 {
  font-size: 34rpx;
}

.font-size-20 {
  font-size: 38rpx;
}

.background-cover {
  background-repeat: no-repeat;
  background-size: cover;
  background-position: center center;
}

.flex-column {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
  flex-wrap: nowrap;
}

.flex-row {
  display: flex;
  justify-content: space-around;
}

.icon{
  height: 40rpx;
  width: 40rpx;
  padding: 0 20rpx;
  vertical-align: middle;
}
.fix-btn{
  width: 100rpx;
  height: 100rpx;
  position: fixed;
  right: 40rpx;
  bottom: 100rpx;
  background: #fdfdfd;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  z-index: 99;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 5rpx 10rpx rgba(0,0,0,.2);
}
.fix-btn image{
  width: 48rpx;
  height: 48rpx;
}