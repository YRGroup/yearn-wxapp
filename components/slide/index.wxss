@import "animate.wxss";
.wrapper {
  overflow: hidden;
  padding: 0 20rpx;
}

.slide {
  margin: 20rpx 0;
  position: relative;
  overflow: hidden;
}

.slide-title {
  background: #114875;
  padding: 20rpx 0 20rpx 40rpx;
  color: #fff;
}
.content-wrapper{
  background: #fafafa;
  overflow:auto;
  transition:all .5s;
}
.slide-content {
  line-height: 40rpx;
  font-size: 30rpx;
  padding: 20rpx;
  overflow: auto;
}

