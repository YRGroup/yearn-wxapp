<!-- components/introduce/introduce.wxml -->
<view class="wrapper">
  <swiper class="swiper"
  indicator-active-color="#114875"
  autoplay="{{false}}" 
  interval="{{5000}}" 
  current="1"
  previous-margin="150rpx"
  next-margin="150rpx"
  style="height:{{height+'rpx'}}"
  >
  <block wx:for="{{imgUrls}}" wx:for-index="index" wx:key="{{index}}">
    <swiper-item class="swiper-item">
      <image mode="{{mode}}" bindtap="previewImage" data-src="{{item.url}}" src="{{item.images.medium_large.url}}" class="slide-image" />
      <text class="img-title">{{item.title}}</text>
    </swiper-item>
  </block>
</swiper>
</view>