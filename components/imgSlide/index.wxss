.wrapper{
  position: relative;
}
.swiper {
  /* height: 500rpx; */
 
}

.swiper-item {
  box-sizing: border-box;
  width: 100%;
  position: relative;
}

.swiper-item image {
  height: 100%;
  width: 100%;
}

.swiper-item .img-title {
  position: absolute;
  bottom: 0;
  width: 100%;
  background: rgba(0,0,0,.5);
  line-height: 40rpx;
  font-size: 30rpx;
  z-index: 2;
}

.dots{
  position: absolute;
  width: 100%;
  text-align: center;
  bottom: 30rpx;
}
.dot{
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  border-radius: 10rpx;
  background: #fff;
  margin: 0 20rpx;
  transition: all .3s;
}
.dot.active{
  width: 60rpx;
}