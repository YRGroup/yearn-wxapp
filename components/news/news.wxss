.introduce {
  height: 1140rpx;
  position: relative;
  box-sizing: border-box;
}

.img {
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: -10;
}

.container {
  position: absolute;
  top: 160rpx;
  background: rgba(255, 255, 255, 0.6);
  box-shadow: 0 0 10px rgba(185, 185, 185, 0.3);
  border-radius: 10rpx;
  margin: 40rpx;
  padding: 40rpx;
  /* line-height: 42rpx; */
}
.news-card{
  padding: 20rpx 0;
}
.news-title{
  font-size: 30rpx;
}

.loading-wrapper{
  text-align: center;
  padding: 40rpx 0;
}
.wrapper{
  height: 100%;
}
.scrollView{
  height: 100%;
  background: #fff;
}
.noMore{
  text-align: center;
  color: #999;
}
.thumb-img{
  width: 400rpx;
}