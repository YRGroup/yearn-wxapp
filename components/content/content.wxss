/* components/content/content.wxss */
.content{
    background: #494949;
    height: 800rpx;
    color: #fff;
    /* padding: 20rpx; */
}

.box{
    border-radius: 10rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.logo{
    width: 540rpx;
    height: 100rpx;
    text-align: center;
}
.item{
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    border: 1rpx solid #5e5e5e;
    padding: 40rpx 0;
}
.icon{
    width: 48rpx;
    height: 48rpx;
    margin-right:20rpx;
    color: #989898;
    vertical-align: middle;
}
.logoPic{
    flex-direction: column;
}
.code{
    width: 300rpx;
    height: 300rpx;
    margin-top: 30rpx;
}
.tool{
    display: flex;
    justify-content: space-around;
    align-items: center;
    padding: 0;
}
.tool view{
    display: flex;
    align-items: center;
    justify-content: center;
    width: 50%;
    border-right: 1rpx solid #5e5e5e;
    padding: 40rpx 0;
}
.tool view:last-child{
    border: none;
}
.tool button{
    width: 100%;
    border: none;
    background: transparent;
    line-height: 48rpx;
    display: inline-block;
    align-items: center;
    justify-content: center;
    font-size: 32rpx;
    color: #fff;
}
.tool button::after{
  content: '';
  border: none;
}